<div class="wrapframe">
  <div class="slideshows">
    <div class="slideshow slideshow--hero">
      <div class="mainslides">
        <div class="slide slide1"></div>
        <div class="slide slide2"></div>
        <div class="slide slide3"></div>
      </div>
    </div>
    <div class="slideshow slideshow--contrast slideshow--contrast--before">
      <div class="secondslides">
        <div class="slide slide1"></div>
        <div class="slide slide2"></div>
        <div class="slide slide3"></div>
      </div>
    </div>
    <div class="slideshow slideshow--contrast slideshow--contrast--after">
      <div class="thirdslides">
        <div class="slide slide1"></div>
        <div class="slide slide2"></div>
        <div class="slide slide3"></div>
      </div>
    </div>
    <div class="top-header">
      <div class="top-header-container" >
        <h1>Chiang Mai Café Map</h1>
        <p>Develop the Café maps of Chiang Mai</p>
        <% unless user_signed_in? %>
          <%= link_to "Log in", user_session_path,  class: "log-in-link btn" %>
        <% end %>
        <span class="log-in-inline" >
          <% unless user_signed_in? %>
            <span>and </span>Create
          <% else %>
            <%= link_to 'Create', new_caffe_path, class: "log-in-link log-in-link-create btn" %>
          <% end %>
          <span>your Café</span><i class="fa fa-coffee" aria-hidden="true"></i></span>
      </div>
    </div>
  </div>
</div>
<%= render "shared/caffe" %>
<div class="container">
  <%= render 'shared/user' %>
</div>
