<% if @caffe.errors.any? %>
  <ul>
    <% @caffe.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @caffe, local: true do |f| %>
  <p><%= f.text_field :name  %></p>
  <p><%= f.text_field :comment  %></p>
  <p><%= f.file_field :image, accept: "image/png,image/jpeg,image/jpg,image/gif" %></p>
  <%= f.submit "submit" %>
<% end %>
<%= link_to 'Return to Caffes listing', caffes_path %>
