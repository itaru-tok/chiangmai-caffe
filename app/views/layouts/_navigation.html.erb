      <ul class="navbar-nav ml-auto">
        <li class='nav-item user-name user-name-nav' >
          <%= link_to current_user do %>
            <i class="fa fa-user-circle text-light fa-lg" aria-hidden="true"></i>  <%= current_user.username %>
